@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-12">
        <h2><a href="/view/books/@Model.Id">@Model.Title</a></h2>
        <hr />
        <form action="/view/books/@Model.Id/update" method="post">
            <div class="form-group">
                <label for="title">Name:</label>
                <input type="text" name="title" value="@Model.Title" required>
            </div>
            <div class="form-group">
                <label for="addAuthor">Add Author:</label>
                <input type="text" name="addAuthor" value="">
            </div>
            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
        <form class="inline-form-button" method="post" action="/view/books/@Model.Id/delete"><button type="submit" class="btn btn-danger">Delete</button></form>
        <a href="/" class="btn btn-primary">Return to Home</a>
    </div>
</div>